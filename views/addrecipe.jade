extends layout

block content
form(role='form', action="/recipe",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="title", placeholder='Enter title')
      .form-group
        span.label Description
            textarea(name="description", cols="40", rows="5")
      .form-group
        input.form-control(type='text', name="steps", placeholder='Add Steps')
      .form-group
        input.form-control(type='servings', name="servings", placeholder='Servers how many?')
      .form-group
          input.form-control(type='text', name="preptime", placeholder='How long does it take') 
      .form-group
          input.form-control(type='text', name="author", placeholder='Cooked by')     

      button.btn.btn-default(type='submit') Submit
      a(href='/')
        button.btn.btn-primary(type="button") Cancel